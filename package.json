{
  "name": "srcset-generator",
  "version": "0.0.0-development",
  "description": "Generates srcset based on a source image.",
  "author": "Tom Bonanni",
  "license": "MIT",
  "homepage": "https://github.com/redhair/srcset-generator#readme",
  "main": "dist/index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest && codecov",
    "commit": "git-cz",
    "build": "webpack --mode production",
    "semantic-release": "semantic-release"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "testEnvironmentOptions": {
      "resources": "usable"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/redhair/srcset-generator.git"
  },
  "engines": {
    "node": ">=8"
  },
  "bugs": {
    "url": "https://github.com/redhair/srcset-generator/issues"
  },
  "xo": {
    "space": true
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm test && npm run build"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.6.2",
    "babel-loader": "^8.0.6",
    "canvas": "^2.6.1",
    "codecov": "^3.6.5",
    "commitizen": "^4.0.3",
    "cz-conventional-commit": "^1.0.6",
    "file-loader": "^4.2.0",
    "ghooks": "^2.0.4",
    "jest": "^25.1.0",
    "semantic-release": "^17.0.4",
    "url-loader": "^2.1.0",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.3.6",
    "xo": "^0.24.0"
  }
}
